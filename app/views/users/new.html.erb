<div id="welcome_body">
      <div class="welcome_page" >
            <div id="links">
            <%= link_to "Sign in", signin_path, class: "top_links" %>
      </div>
      <h1 class="main_title">Notre Dame Confessions</h1>
     <h2 class="main_subtitle">Confess anything, anonymously.</h2>
            <div class="form_container">
            <h2 class="main_subtitle sign_up_subtitle">Sign up:</h2>
                  <div class="signup_form">
                  <%= form_for(@user) do |f| %>

                        
                        <%= f.text_field :username, placeholder:"Choose a Username" %>
                        
                        <%= f.text_field :name, placeholder:"Full Name (optional)" %>

                        <%= f.text_field :email, placeholder:"Email (optional)" %>

                        <%= f.password_field :password, placeholder:"Password (must be 6 characters long)" %>

                        <%= f.password_field :password_confirmation, placeholder:"Confirm Password" %>
                       
                        <%= f.submit "Create an account", class: "btn btn-large btn-primary" %>
                      
                  <% end %>

                  <%= render 'shared/error_messages' %>
                  </div>
            </div>
      </div>
</div>

