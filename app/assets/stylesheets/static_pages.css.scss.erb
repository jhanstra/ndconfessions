#welcome_body {
	position:fixed;
	width:100%;
	background:black;
	overflow:auto;

}
.welcome_page {
	background-image:url(<%= asset_path 'shamrocks.jpg' %>);
	background-size:100%;
	background-overflow:hidden;
	height:1200px;

}


/* typography */

.main_title {
	text-align:center;
	font-size:3.5em;
	color:black;
	position: relative;
	top:50px;
	margin:0 0 0 24%;
	padding-left:1%;
	color:#333;
	text-shadow: 0 0 10px #fff;
}
.main_subtitle {
	text-align:center;
	position:relative;
	margin:0 1% 0 0;
	padding-left:0%;
	color:#555;
	top: 60px;
	font-weight:normal;
	font-size:1.7em;
	letter-spacing:-1px;
	text-shadow: 0px 0px 5px #fff;

}
.sign_up_subtitle {
	top:0px;
	padding-right:10%;
	margin: 0 1% 15px 0;
	color:#eee;
	text-shadow: 0 0 5px #000;
}